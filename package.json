{
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:clear": "tsdx test --clearCache",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.env-test.ts"
    ]
  },
  "name": "lambert-logger",
  "author": "Nathan Simpson",
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/lambert-logger.esm.js",
  "size-limit": [
    {
      "path": "dist/lambert-logger.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/lambert-logger.esm.js",
      "limit": "20 KB"
    }
  ],
  "peerDependencies": {
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@size-limit/preset-small-lib": "^4.11.0",
    "@types/chalk": "^2.2.0",
    "@types/lodash": "^4.14.170",
    "@types/verror": "^1.10.4",
    "husky": "^6.0.0",
    "size-limit": "^4.11.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "verror": "^1.10.0"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "winston": "^3.3.3"
  }
}
